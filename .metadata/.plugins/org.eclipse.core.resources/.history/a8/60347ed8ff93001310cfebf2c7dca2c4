
public class GamblerMain {

	static double gamma = 1.0;
	static double p = 0.4;
	final static int maxStates = 101;
	static double[] V = new double[maxStates];
	static double theta = 0.01;
	
	public static void main(String[] args) {
		V[maxStates -1] = 1.0;
		V[0] = 0.0;
		double delta;
		double oldValue;
		double bestNewValue;
		do{
			delta = 0.0;
			
			for (int i = 0; i < maxStates-1; i++) {
				oldValue = V[i];
				bestNewValue = 0.0;
				for (int j = 1; j < i; j++) {
					double valueWin = p * V[(i + j) > (maxStates - 1) ? 
							(maxStates - 1): i + j];
					double valueLoss = (1-p) * V[(i - j)];
					double valueTotal = valueLoss + valueWin;
					if (bestNewValue < valueTotal) {
						bestNewValue = valueTotal;
					}
				}
				V[i] = bestNewValue;
				if (delta < Math.abs(V[i] - bestNewValue)) {
					delta = Math.abs(V[i] - bestNewValue);
				}
			}
			System.out.println("h");
		} while (delta > theta);
		
		for (int i = 0; i < maxStates; i++) {
			System.out.println(V[i]);
		}
	}
}
